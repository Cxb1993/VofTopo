<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="VofTopo" class="vtkVofTopo" label="Vof Topology">
      <Documentation
          long_help="Extract topology in time-dependent volume fraction field."
          short_help="Topology in VOF-field.">
      </Documentation>
      
      <InputProperty
          name="Velocity"
	  port_index="0"
          command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
	<InputArrayDomain name="input_array"
                          number_of_components="3" />

        <Documentation>
          Set the velocity field.
        </Documentation>
      </InputProperty>
      
      <InputProperty
          name="Vof"
	  port_index="1"
          command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
	<InputArrayDomain name="input_array"
                          number_of_components="1" />

        <Documentation>
          Set the volume fraction field.
        </Documentation>
      </InputProperty>

      <IntVectorProperty
	  name="InitTimeStep"
	  label="Init time step"
	  command="SetInitTimeStep"
	  number_of_elements="1"
	  default_values="0">
      </IntVectorProperty>

      <IntVectorProperty
	  name="TargetTimeStep"
	  label="Target time step"
	  command="SetTargetTimeStep"
	  number_of_elements="1"
	  default_values="0">
      </IntVectorProperty>

      <DoubleVectorProperty
	  name="TimeStepDelta"
	  label="Time step delta"
	  command="SetTimeStepDelta"
	  number_of_elements="1"
	  default_values="0">
      </DoubleVectorProperty>

    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
