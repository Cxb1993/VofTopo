<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <!-- ================================================================== -->
    <SourceProxy name="VofAdvect" class="vtkVofAdvect" label="Vof Advect">
      <Documentation
         long_help="Advect particles in Vof-field."
         short_help="Vof Advect">
      </Documentation>

      <InputProperty name="Velocity"
		     port_index="0"
		     command="SetInputConnection">
	<ProxyGroupDomain name="groups">
	  <Group name="sources"/>
	  <Group name="filters"/>
	</ProxyGroupDomain>
	<DataTypeDomain name="input_type">
	  <DataType value="vtkDataSet"/>
	</DataTypeDomain>
	<InputArrayDomain name="input_array1"
			  number_of_components="3">
	</InputArrayDomain>
	<!-- <InputArrayDomain name="input_array1" -->
	<!-- 		  attribute_type="point"  -->
	<!-- 		  number_of_components="3"> -->
	<!-- </InputArrayDomain> -->
	<Documentation>
	  The input.
	</Documentation>
      </InputProperty>

      <InputProperty name="Vof"
		     port_index="1"
		     command="SetInputConnection">
	<ProxyGroupDomain name="groups">
	  <Group name="sources"/>
	  <Group name="filters"/>
	</ProxyGroupDomain>
	<DataTypeDomain name="input_type">
	  <DataType value="vtkDataSet"/>
	</DataTypeDomain>
	<InputArrayDomain name="input_array2"
			  number_of_components="1">
	</InputArrayDomain>
	<!-- <InputArrayDomain name="input_array2" -->
	<!-- 		  attribute_type="point"  -->
	<!-- 		  number_of_components="1"> -->
	<!-- </InputArrayDomain> -->
	<Documentation>
	  The input.
	</Documentation>
      </InputProperty>
      
      <InputProperty name="Particles"
		     port_index="2"
		     command="SetInputConnection">
	<ProxyGroupDomain name="groups">
	  <Group name="sources"/>
	  <Group name="filters"/>
	</ProxyGroupDomain>
	<DataTypeDomain name="input_type">
	  <DataType value="vtkDataSet"/>
	</DataTypeDomain>
	<Documentation>
	  The input.
	</Documentation>
      </InputProperty>

      <IntVectorProperty
	  name="StartTimeStep"
	  label="StartTimeStep"
	  command="SetStartTimeStep"
	  number_of_elements="1"
	  default_values="0">
      </IntVectorProperty>
    </SourceProxy>
    <!-- End VofAdvect -->
  </ProxyGroup>
  <!-- End Filters Group -->
</ServerManagerConfiguration>
