<ServerManagerConfiguration>
  <ProxyGroup name="filters">
    <SourceProxy name="VofTopo" class="vtkVofTopo" label="Vof Topology">
      <Documentation
          long_help="Extract topology in time-dependent volume fraction field."
          short_help="Topology in VOF-field.">
      </Documentation>
      
      <InputProperty
          name="Vof"
	  port_index="0"
          command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
	<InputArrayDomain name="input_array"
                          number_of_components="1" />
        <Documentation>
          Set the volume fraction field.
        </Documentation>
      </InputProperty>

      <InputProperty
          name="Velocity"
	  port_index="1"
          command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
	<!-- <InputArrayDomain name="input_array" -->
        <!--                   number_of_components="3" /> -->
        <Documentation>
          Set the velocity field.
        </Documentation>
      </InputProperty>
      
      <InputProperty
          name="Seed points"
	  port_index="2"
          command="SetInputConnection">
        <ProxyGroupDomain name="groups">
          <Group name="sources"/>
          <Group name="filters"/>
        </ProxyGroupDomain>
        <DataTypeDomain name="input_type">
          <DataType value="vtkDataSet"/>
        </DataTypeDomain>
        <Documentation>
          Set the intial particle positions.
        </Documentation>
      </InputProperty>
      
      <IntVectorProperty
	  name="InitTimeStep"
	  label="Init time step"
	  command="SetInitTimeStep"
	  number_of_elements="1"
	  default_values="0">
      </IntVectorProperty>

      <IntVectorProperty
	  name="TargetTimeStep"
	  label="Target time step"
	  command="SetTargetTimeStep"
	  number_of_elements="1"
	  default_values="0">
      </IntVectorProperty>

      <DoubleVectorProperty
	  name="TimeStepDelta"
	  label="Time step delta"
	  command="SetTimeStepDelta"
	  number_of_elements="1"
	  default_values="0">
      </DoubleVectorProperty>

      <IntVectorProperty
          name="StoreIntermParticles"
	  label="Store Intermediate Particles"
          command="SetStoreIntermParticles"
          number_of_elements="1"
          default_values="0">
	<BooleanDomain name="bool"/>
      </IntVectorProperty>
      
      <IntVectorProperty
          name="StoreIntermBoundaries"
	  label="Store Intermediate Boundaries"
          command="SetStoreIntermBoundaries"
          number_of_elements="1"
          default_values="0">
	<BooleanDomain name="bool"/>
      </IntVectorProperty>
      
      <IntVectorProperty
          name="PLIC-based correction"
	  label="PLIC-based correction"
          command="SetPLICCorrection"
          number_of_elements="1"
          default_values="1">
	<BooleanDomain name="bool"/>
      </IntVectorProperty>
      
      <IntVectorProperty
          name="VOF-based correction"
	  label="VOF-based correction"
          command="SetVOFCorrection"
          number_of_elements="1"
          default_values="1">
	<BooleanDomain name="bool"/>
      </IntVectorProperty>
      
      <IntVectorProperty
          name="Smart correction"
	  label="Smart correction"
          command="SetSmartCorrection"
          number_of_elements="1"
          default_values="1">
	<BooleanDomain name="bool"/>
      </IntVectorProperty>

      <IntVectorProperty
	  name="SeedByPLIC"
	  label="SeedByPLIC"
	  command="SetSeedByPLIC"
	  number_of_elements="1"
	  default_values="1">
	<BooleanDomain name="bool"/>
      </IntVectorProperty>

      <IntVectorProperty
 	  name="Integration Method"
	  command="SetIntegrationMethod"
	  label="Integration Method"
	  number_of_elements="1"
	  default_values="1">
	<EnumerationDomain name="enum">
	  <Entry value="0" text="Heun"/>
	  <Entry value="1" text="RK4"/>
	</EnumerationDomain>
      </IntVectorProperty>

      <IntVectorProperty
 	  name="Num. RK4 integration substeps"
	  command="SetRK4NumSteps"
	  label="Num. RK4 integration substeps"
	  number_of_elements="1"
	  default_values="8">
      </IntVectorProperty>

      <DoubleVectorProperty
	  name="EMF0"
	  label="EMF0"
	  command="SetEMF0"
	  number_of_elements="1"
	  default_values="0.000001">
      </DoubleVectorProperty>

      <DoubleVectorProperty
	  name="EMF1"
	  label="EMF1"
	  command="SetEMF1"
	  number_of_elements="1"
	  default_values="0.999999">
      </DoubleVectorProperty>

      <IntVectorProperty
	  name="Refinement"
	  label="Refinement"
	  command="SetRefinement"
	  number_of_elements="1"
	  default_values="0">
	<Documentation>
	  Seed points refinement; numNewPoints = numCells*8^Refinement
	</Documentation>
      </IntVectorProperty>

      <IntVectorProperty
	  name="ParticleStoreFreq"
	  label="Particle Store Frequency"
	  command="SetParticleStoreFreq"
	  number_of_elements="1"
	  default_values="8">
	<Documentation>
	  Set how often intermediate particle positions should be stored (every Interm-th simulation step)
	</Documentation>
      </IntVectorProperty>

      <Hints>
      	<ShowInMenu category="Extensions" />
      </Hints>

    </SourceProxy>
  </ProxyGroup>
</ServerManagerConfiguration>
